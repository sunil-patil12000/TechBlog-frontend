{
  "name": "modern-tech-blog",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/update-sitemap.js",
    "build:ssg": "tsc && vite-ssg build && node scripts/update-sitemap.js",
    "build:with-dynamic-sitemap": "tsc && vite build && node scripts/generate-sitemap-advanced.ts",
    "build:ssg:with-dynamic-sitemap": "tsc && vite-ssg build && node scripts/generate-sitemap-advanced.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start:dev": "concurrently \"npm run dev\" \"cd ../backend && npm run dev\"",
    "generate-sitemap": "node --loader ts-node/esm ./scripts/generate-sitemap.ts",
    "generate-dynamic-sitemap": "node --loader ts-node/esm ./scripts/generate-sitemap-advanced.ts",
    "update-sitemap-domain": "node scripts/update-sitemap.js",
    "analyze": "vite build --mode=analyze",
    "seo:validate-schema": "npx schema-validator ./public/sitemap.xml",
    "seo:check-lighthouse": "npx lighthouse-ci https://yourdomain.com --output-path=./lighthouse-report.html --view",
    "seo:check-links": "npx broken-link-checker https://yourdomain.com -ro",
    "build:ssg:with-sitemap": "tsc && ts-node scripts/generate-sitemap.ts && vite-ssg build && node scripts/update-sitemap.js"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.7",
    "@mui/material": "^6.4.7",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@tinymce/tinymce-react": "^6.0.0",
    "@types/dompurify": "^3.0.5",
    "@types/marked": "^5.0.2",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.8.1",
    "chart.js": "^4.4.0",
    "class-variance-authority": "^0.7.1",
    "date-fns": "^3.6.0",
    "dompurify": "^3.2.4",
    "dotenv": "^16.4.7",
    "framer-motion": "^12.4.10",
    "gsap": "^3.12.5",
    "intersection-observer": "^0.12.2",
    "js-cookie": "^3.0.5",
    "lodash.debounce": "^4.0.8",
    "lorem-ipsum": "^2.0.8",
    "lucide-react": "^0.344.0",
    "marked": "^15.0.7",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-hotkeys-hook": "^4.6.1",
    "react-lazy-load-image-component": "^1.6.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.30.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-toastify": "^11.0.5",
    "react-use": "^17.6.0",
    "reading-time": "^1.5.0",
    "remark-gfm": "^4.0.0",
    "schema-dts": "^1.1.2",
    "socket.io-client": "^4.8.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@loadable/component": "^5.16.4",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/lodash.debounce": "^4.0.9",
    "@types/node": "^22.13.10",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-lazy-load-image-component": "^1.6.3",
    "@types/react-syntax-highlighter": "^15.5.11",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^5.14.0",
    "sharp": "^0.33.5",
    "svgo": "^3.3.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-imagetools": "^7.0.5",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vite-plugin-pwa": "^0.19.0",
    "vite-plugin-sitemap": "^0.7.1",
    "vite-ssg": "^25.2.0"
  }
}
