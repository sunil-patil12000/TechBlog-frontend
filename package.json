{
  "name": "modern-tech-blog",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/update-sitemap.js",
    "build:ssg": "SSG=true tsc && vite-ssg build && node scripts/update-sitemap.js",
    "build:with-dynamic-sitemap": "tsc && vite build && node scripts/generate-sitemap-advanced.ts",
    "build:ssg:with-dynamic-sitemap": "SSG=true tsc && vite-ssg build && node scripts/generate-sitemap-advanced.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start:dev": "concurrently \"npm run dev\" \"cd ../backend && npm run dev\"",
    "generate-sitemap": "node --loader ts-node/esm ./scripts/generate-sitemap.ts",
    "generate-dynamic-sitemap": "node --loader ts-node/esm ./scripts/generate-sitemap-advanced.ts",
    "update-sitemap-domain": "node scripts/update-sitemap.js",
    "analyze": "vite build --mode=analyze",
    "seo:validate-schema": "node scripts/validate-schema.js --dir=./public",
    "seo:validate-schema:url": "node scripts/validate-schema.js --url=https://yourdomain.com",
    "seo:validate-schema:fix": "node scripts/validate-schema.js --dir=./public --fix",
    "seo:validate-schema:google": "node scripts/validate-schema.js --dir=./public --google-test",
    "seo:validate-schema:simple": "node scripts/validate-schema-simple.js",
    "seo:check-lighthouse": "npx lighthouse-ci https://yourdomain.com --output-path=./lighthouse-report.html --view",
    "seo:check-links": "npx broken-link-checker https://yourdomain.com -ro",
    "build:ssg:with-sitemap": "SSG=true tsc && ts-node scripts/generate-sitemap.ts && vite-ssg build && node scripts/update-sitemap.js",
    "analyze:vitals": "node scripts/analyze-web-vitals.js",
    "seo:analyze": "node scripts/analyze-web-vitals.js",
    "images:optimize": "node scripts/optimize-images.js",
    "check:cwv": "npm run analyze:vitals -- --url=http://localhost:3000",
    "check:seo": "npx lighthouse http://localhost:3000 --only-categories=seo --view",
    "audit": "npm run analyze:vitals && npm run seo:validate-schema",
    "seo:audit-full": "npm run seo:validate-schema && npm run seo:check-lighthouse && npm run seo:check-links && npm run check:cwv",
    "schema:test": "node scripts/validate-schema.js --file=./public/example-schemas/article.json --verbose",
    "schema:test:simple": "node scripts/validate-schema-simple.js ./public/example-schemas/article.json"
  },
